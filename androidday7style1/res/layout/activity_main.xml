<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.androidday7style1.MainActivity" >

    <TextView
        style="@style/TextStyle1"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:text="@string/hello_world"
		/>
    <TextView 
        style="@style/TextStyle2"
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_below="@id/text1"
		android:text="@string/hello_world"
        />

    <Button
        android:id="@+id/buttonInfo"
        style="@style/ButtonInformation"
        android:layout_width="wrap_content"
        android:layout_below="@id/text2"
        android:layout_height="wrap_content"
        android:background="@drawable/button_select_info"
        android:text="INFO!" />

    <Button
        android:id="@+id/buttonWarn"
        style="@style/ButtonWarning"
        android:layout_below="@id/buttonInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_select_warn"
        android:text="WARNING !" />

	<Button
	    android:id="@+id/buttonCaution"
	    style="@style/ButtonCaution"
	    android:layout_below="@id/buttonWarn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:background="@drawable/button_select_caut"
	    android:text="CAUTION !!" />

</RelativeLayout>
